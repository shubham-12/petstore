<%- include ("partials/header") %>

<center>
    <div class="card" style="width:25%;">
    <div class="card-title"><h1><%=prod.name%></h1></div>
    <img src="<%=prod.image%>" class="card-img" >
    
    </div>
</center>
<center>
    <h3>Edit Product</h3>
<form action="/<%=prod.id%>/edit?_method=PUT" method="POST">
 <div class="form-group">
     <label>
        Name:
     </label>
     <input style="width:30%" type="text" name="product[name]"  value="<%=prod.name%>">
 </div>
 <div class="form-group">
    <label>
        Image:
    </label>
    <input style="width:30%"  type="text" name="product[image]" value="<%=prod.image%>">
</div> 
<div class="form-group">
    <label>
        Price:
    </label>
    <input style="width:30%"  type="number" name="product[price]" value="<%=prod.price%>">
</div> 
<div class="form-group">
    <label>
        Stock:
    </label>
    <input style="width:30%"  type="number" name="product[stock]" value="<%=prod.stock%>">
</div>                
<input class="btn btn-md btn-success" type="submit">

</form>
</center>



<%- include ("partials/footer") %>